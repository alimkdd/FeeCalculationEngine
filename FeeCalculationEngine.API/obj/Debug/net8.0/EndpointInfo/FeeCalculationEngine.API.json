{
  "openapi": "3.0.1",
  "info": {
    "title": "FeeCalculationEngine.API",
    "version": "1.0"
  },
  "paths": {
    "/api/v1/Fees/Preview": {
      "get": {
        "tags": [
          "Fees"
        ],
        "parameters": [
          {
            "name": "UserId",
            "in": "query",
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          },
          {
            "name": "TransactionTypeId",
            "in": "query",
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          },
          {
            "name": "Amount",
            "in": "query",
            "schema": {
              "type": "number",
              "format": "double"
            }
          },
          {
            "name": "PaymentMethodId",
            "in": "query",
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          },
          {
            "name": "PromoCodeId",
            "in": "query",
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/FeeCalculationResult"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/FeeCalculationResult"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/FeeCalculationResult"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/Fees/Calculate": {
      "post": {
        "tags": [
          "Fees"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/FeeCalculationRequest"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/FeeCalculationRequest"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/FeeCalculationRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/FeeCalculationResult"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/FeeCalculationResult"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/FeeCalculationResult"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "FeeCalculationRequest": {
        "type": "object",
        "properties": {
          "userId": {
            "type": "integer",
            "format": "int32"
          },
          "transactionTypeId": {
            "type": "integer",
            "format": "int32"
          },
          "amount": {
            "type": "number",
            "format": "double"
          },
          "paymentMethodId": {
            "type": "integer",
            "format": "int32"
          },
          "promoCodeId": {
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      },
      "FeeCalculationResult": {
        "type": "object",
        "properties": {
          "baseFee": {
            "type": "number",
            "format": "double"
          },
          "appliedModifiers": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/FeeModifierResult"
            },
            "nullable": true
          },
          "totalDiscount": {
            "type": "number",
            "format": "double"
          },
          "finalFee": {
            "type": "number",
            "format": "double"
          },
          "breakdown": {
            "type": "string",
            "nullable": true
          },
          "stackingStrategy": {
            "type": "string",
            "nullable": true
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          }
        },
        "additionalProperties": false
      },
      "FeeModifierResult": {
        "type": "object",
        "properties": {
          "modifierName": {
            "type": "string",
            "nullable": true
          },
          "amount": {
            "type": "number",
            "format": "double"
          },
          "priority": {
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      }
    }
  }
}